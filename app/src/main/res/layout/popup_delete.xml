<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="#000000"
        android:text="@string/pesanhapusdata"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_below="@+id/textDialog">

        <Button
            android:id="@+id/btn_tdkhapus"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text=" Tidak "
            android:layout_marginTop="@dimen/_5sdp" />

        <Button
            android:id="@+id/btn_yahapus"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text=" Hapus "
            android:layout_alignTop="@+id/btn_tdkhapus"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/btn_tdkhapus"
            android:layout_toEndOf="@+id/btn_tdkhapus" />

    </RelativeLayout>
</RelativeLayout>